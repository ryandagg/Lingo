extends layout

block content
	h1 Quiz Page
	if !quizLanguage
	form(method="post" action="/setLanguage")
		select(name="quizLanguage") 
			option(value="fra") French
			option(value="spa") Spanish
		input(type="submit" value="Select Language")
	if quizLanguage
		div#translate-this Translate this word: #{aWord}
		form#quiz-submit(method="post" action="/quizResponse")
			input#quiz-answer(type="text" name="quizAnswer")
			input(type="submit" value="Submit")
	
	div#answer-status 
